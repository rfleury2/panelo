<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Elo Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each_with_index do |player, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= player.name %></td>
        <td><%= player.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>