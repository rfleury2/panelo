<div>
  <div>
    <h2><%= player.name %></h2>
  </div>
  <div class='player-info'>
    <div class='player-image'>
      <%= image_tag player.image_suffix, height: 300, width: 300 %>
    </div>
    <div>
      <%= button_to "Winner", contest_game_path(game.contest, game, {winner_id: player.id}), method: :put, class: 'btn btn-success winner-button' %>    
    </div>
  </div>
</div>