<div class='container'>
  <% @contests.each do |contest| %>
    <div class='col-md-4 col-xs-6'>
      <div class="card">
        <div class="content content-info">
          <h4 class="card-title">
            <%= link_to contest.title, new_contest_game_path(contest) %>
          </h4>
          <div class="footer">
            <div class="author">
            </div>
            <div class="stats">
              <%= contest.category %>
            </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>